#!/usr/bin/env python
# coding: utf-8
import sys
import os

from docopt import docopt

from ubik_toolbelt import repo

doc = """Ubik Repo, tool for repositories management.

Usage:
  ubik-repo create <name>
  ubik-repo generate <branch>... [--old-format]
  ubik-repo generate [--old-format]
  ubik-repo -h | --help
  ubik-repo -v | --version

Options:
  --old-format   Create Packages.list old format
  -h --help      Show help
  -v --version   Show version
"""

if __name__ == '__main__':
	args = docopt(doc, version="0.0.1")
	if args.get('create', False):
		repo.create(args.get('<name>'))
	elif args.get('generate', False):
		repo.generate(args.get('<branch>', False), old_format=args.get('--old-format', False))
